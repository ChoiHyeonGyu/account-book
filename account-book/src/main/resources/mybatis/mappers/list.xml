	<select id="usernameselect" parameterType="string" resultType="string">
		<![CDATA[
			select name from users where id = #{value}
		]]>
	</select>
	
	<insert id="boardinsert" parameterType="boardvo">
		<![CDATA[
			insert into board values(seq_board.nextval, #{id}, #{month}, #{title}, #{content}, #{name}, sysdate, 0, 0, '')
		]]>
	</insert>
	
	<select id="boardidselect" parameterType="boardvo" resultType="int">
		<![CDATA[
			select board_id from board where id = #{id} and month = #{month} and title = #{title} and content = #{content}
		]]>
	</select>
	
	<insert id="imageinsert" parameterType="boardvo">
		<![CDATA[
			insert into picture values(#{photo}, #{boardId})
		]]>
	</insert>
	
	<select id="boardselect" resultType="boardvo">
		<![CDATA[
			select board_id as boardId, comment_id as commentId, board.* from board
		]]>
	</select>
	
	<select id="searchboardselect" parameterType="string" resultType="boardvo">
		<![CDATA[
			select board_id as boardId, comment_id as commentId, board.* from board where month like '%${_parameter}%' or title like '%${_parameter}%' or name like '%${_parameter}%' or 
			day like '%${_parameter}%'
		]]>
	</select>
