<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="listview">

	<select id="list" resultType="listvo">
<![CDATA[
select a.ID,a.LIST_ID as listId,a.bank,a.operations,a.locationX,a.locationY,a.PAID,a.MONEY,a.name,a.category,b.day as dat from list a, LISTDATE b  where a.id = #{id}
]]>
	</select>
	
	<delete id="delete1" parameterType="listvo">
	
<![CDATA[
delete from listDate where list_Id = #{listId}

]]>

	</delete>
	<delete id="delete" parameterType="listvo">
	
<![CDATA[
delete from list where id = #{id} and list_Id = #{listId}

]]>

	</delete>
	
	

	<insert id="add" parameterType="listvo">
	
	<![CDATA[
	
insert into post values(seq_post.nextval,#{content},sysdate,#{no})where id = #{id}
	select a.ID,a.LIST_ID as listId,a.bank,a.operations,a.locationX,a.locationY,a.PAID,a.MONEY,a.name,a.category,b.day as dat from list a, LISTDATE b  where a.id = #{id}
	
	]]>
	</insert>

