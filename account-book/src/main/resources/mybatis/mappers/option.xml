<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="option">

	<insert id="add" parameterType="optionvo">
		<![CDATA[
			insert into category values(seq_category.nextval, #{category}, 0, 0)
		]]>
	</insert>

	<insert id="update" parameterType="optionvo">
		<![CDATA[
			update category set category=#{category} where category_id=#{categoryId}
		]]>
	</insert>

	<select id="category" resultType="optionvo">
<![CDATA[
select category, category_id as categoryId from category
 ]]>
	</select>

</mapper>

